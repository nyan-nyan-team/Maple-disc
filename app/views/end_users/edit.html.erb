<h1>マイページ編集</h1>
<table>
<%= form_for(@end_user) do |f| %>
    <tr>
    <th>お名前</th>
    <td>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.text_field :first_name, autofocus: true %>
    </td>
    </tr>
    <tr>
    <th>お名前カナ</th>
    <td>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
    </td>
    </tr>
    <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
    </tr>
    <tr>
    <th>電話番号</th>
    <td><%= f.text_field :phone_number %></td>
    </tr>
</table>
<%= f.submit '保存' %>
<% end %>

    <tr>
    <th>お届け先住所追加</th>
    <td>
        <%= form_for(@address) do |addresses_form| %>
        <%= addresses_form.label :お届け先郵便番号 %>
        <%= addresses_form.text_field :delivery_postal_code %><br />
        <%= addresses_form.label :お届け先住所 %>
        <%= addresses_form.text_field :delivery_address %><br />
        <%= addresses_form.label :お届け先お名前 %>
        <%= addresses_form.text_field :delivery_name %><br />
        <%= f.submit '追加' %>
        <% end %>
    </td>
    </tr>




