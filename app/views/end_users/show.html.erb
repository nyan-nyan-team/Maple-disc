<div class="container">

<h1>マイページ</h1>
<br>
<% if flash[:end_user] %>
    <h1 class="alert alert-success"><%= flash[:end_user] %></h1>
<% end %>
<% if flash[:end_user_address] %>
    <h1 class="alert alert-success"><%= flash[:end_user_address] %></h1>
<% end %>
<br>
    <table>
        <tr>
            <th>お名前</th>
            <td>
                <%= "#{@full_name}様" %>
            </td>
        </tr>
        <tr>
            <th>名前(カタカナ)</th>
            <td>
                <%= @full_name_kana %>
            </td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= @email %></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%= @phone_number %></td>
        </tr>
        <tr>
            <th>ご登録住所</th>
            <td>
                <%= "〒 #{@main_postal_code}" %><br>
                <%= @main_address %>
            </td>
        </tr>
        <% @addresses.each_with_index do |address,i| %>
        <tr>
            <th>お届け先住所<%= i + 1 %></th>
            <td>
            <%= "〒 #{address.delivery_postal_code}" %><br>
            <%= address.delivery_address %><br>
            <%= address.delivery_name %>様
            </td>
        </tr>
        <% end %>
    </table>
    <br>
    <br>
    <div class="button_wrapper">
        <%= link_to "マイページを編集する", edit_end_user_path(@end_user), class: "btn btn-default" %>
    </div>    
    <br>
    <br>
    <div class="button_wrapper">
        <%= link_to "購入履歴をみる", orders_path, class: "btn btn-info"  %>
    </div> 
</div>