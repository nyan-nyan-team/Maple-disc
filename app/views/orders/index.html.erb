<div class="container">
    <div class="row">
        <div class="col-sm-5">
            <table>
            <%#= @orders.each do |order| %>
                <tr>
                    <th>お支払い方法<th>
                    <td><%#= order.payment_method %></td>
                </tr>
                <tr>
                    <th>発送先<th>
                    <td><%#= order.delivery_name %></td>
                </tr>
                <tr>
                    <th>合計枚数<th>
                    <td>変数入れる</td>
                </tr>
                <tr>
                    <th>送料<th>
                    <td>¥500</td>
                </tr>
                <tr>
                    <th>購入価格総計<th>
                    <td><%#= order.purchase_price_total %></td>
                </tr>
            <%# end %>
            </table>
        </div>
    </div>  <%#rowの閉じタグ%>
