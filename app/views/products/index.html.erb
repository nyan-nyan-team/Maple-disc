<div class= "container">
    <div class="page-header">
        <h1>商品一覧</h1>
        <br>
    </div>
    <div class= "row">
        <% @products.each do |product| %>
        <div class= "col-md-3">
            
                <%= link_to product_path(product) do %>
                <%= attachment_image_tag product, :image, :fill, 100, 100, fallback: "default_product.jpg" , size:'100x100' %>
                <% end %>
                <br>
                <%= product.title %>
                <br>
                <%= product.artist.artist_name %>
                <br>
                <div>価格 | ¥<%= product.amount %></div>
                <br>
                <div>在庫数</div>
                <% productquantity = product.total_arrival_quantity - product.total_order_detail_quantity %>
                <%= productquantity %>
                <br>
                <div>販売状況</div>
                <% if productquantity == 0 %>
                <div>売り切れ</div>
                <% else %>
                <div>販売中</div>
                <% end %>
                <br>
                <hr>
            </div>
        
        <% end %>
        
    </div>
</div>

<%= paginate @products %>