<div class="container">
    <h1>受注履歴一覧</h1>
    <div class="page-header">
        <div class="row">
            <% @orders.each do |order| %>
                <div class="col-sm-12">
                    <h2>配送ステータス:<%= @delivery_status %></h2>
                    <h2>購入日：<%= order.updated_at %></h2>
                    <h2>購入者：<%= order.delivery_name %></h2>
                </div>
                <% order.order_details.each do |detail| %>
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-4">
                        <div class="image">
                            <%= attachment_image_tag detail.product, :image, :fill, 100, 100, format: 'jpeg', fallback: "default_product.jpg" , size:'100x100' %>    
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <h2>シングル/アルバム名<h2>
                        <%= detail.product.title %>             
                        <h2>枚数<h2>
                        <%= detail.quantity %>
                        <h2>合計金額<h2>
                        <%= detail.purchase_price %>
                    </div>
                <% end %>
            <% end %>
            <%= paginate @orders %>
            <br>
        </div>
    </div>
</div>  <%#containerの閉じタグ%>