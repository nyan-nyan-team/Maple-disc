<div class="container">
    <h1>受注履歴一覧</h1>
    <div class="page-header">
        <div class="row">
            <% @orders.each do |order| %>
                <div class="col-sm-3">
                </div>
                <div class="col-sm-6">

                    <h2>配送ステータス:<%= @delivery_status %></h2>
                    
                    <h2>購入日：<%= order.updated_at %></h2>
                    <h2>購入者：<%= order.delivery_name %></h2>
                    <% order.order_details.each do |detail| %>
                        <h2>シングル/アルバム名<h2>
                        <%= detail.product.title %>             
                        <h2>枚数<h2>
                        <%= detail.quantity %>
                        <h2>合計金額<h2>
                        <%= detail.purchase_price %>
                    <% end %>
                    <div class= "button-wrapper">
                        <%= link_to "受注履歴詳細へ", admin_order_path(order.id), class: 'btn btn-danger' %>
                        <hr>
                    </div>
            <% end %>
            </div>
            <div class="center">
            <%= paginate @orders %>
            </div>
            <br>
            <div class="col-sm-3">
            </div> 
        </div>
    </div>
</div>  <%#containerの閉じタグ%>