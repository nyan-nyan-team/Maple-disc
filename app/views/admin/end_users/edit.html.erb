<div class= "container">
<h1>ユーザー編集画面</h1>
<%= form_for(@enduser,
            url: admin_end_user_path) do |user| %>
<table class= "table">
  <tr><td>ユーザー名</td></tr>
  <tr>
  <td> 
    <%= user.text_field :last_name %>
    <%= user.text_field :first_name %>
  </td>
  </tr>
  <tr>
    <td>
      <%= user.text_field :last_name_kana %>
      <%= user.text_field :first_name_kana %>
    </td>
  </tr>
  <tr>
    <td>郵便番号</td>
  </tr>
  <tr>
    <td>
      <%= user.text_field :main_postal_code %>
    </td>
  </tr>
  <tr>
    <td>住所</td>
  </tr>
  <tr>
    <td><%= user.text_field :main_address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
  </tr>
  <tr>
    <td><%= user.text_field :phone_number %></td>
  </tr>
  
</table>
<div class= "button-wrapper">
  <%= user.submit "編集完了", class: 'btn btn-success' %>
</div>
<% end %>
<br>
<div class= "button-wrapper">
<%= link_to "退会させる", admin_out_path(@enduser), class: 'btn btn-danger' %>
</div>
</div>

