<div class= "container">
<div class= "page-header">
<h1>入荷履歴一覧</h1>
</div>
<div class="list-group">
<table class= "table">
<% @arrivals.each do |arrival| %>
<tr>
    <th>商品名</th>
    <th>数量</th>
    <th>入荷日時</th>
    <th></th>
</tr>
<tr>
    <td><%= arrival.product.title %></td>
    <td><%= arrival.quantity %></td>
    <td><%= arrival.arrival_date %></td>
    <td><%= link_to edit_admin_arrival_path(arrival) do %>
    <i>編集</i>
    <% end %>
    </td>
</tr>
<% end %>
</table>
<%= paginate @arrivals %>
<%= link_to "入荷情報追加", new_admin_arrival_path %>
</div>
</div>

