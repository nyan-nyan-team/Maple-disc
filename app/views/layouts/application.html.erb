<!DOCTYPE html>
<html>
<head>
    <title>namespace - end_user</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:400,700&display=swap&subset=japanese" rel="stylesheet">
</head>
<body>

<%# header %>

<header>
    <nav>
        <% if end_user_signed_in? %>
        <ul class="nav-list">
            <li><a><%= link_to "ホーム" , products_path %></a></li>
            <%# 検索機能実装場所 %>
            <li class="nav-list-item">
            <dl class="searchbox">
                <%= search_form_for @q do |f|%>
                <dt><%= f.text_field :title_cont, placeholder: "商品名" %></dt>
                <dd><%= f.submit ("検索") , class: 'search-btn' %></dd>
                <% end %>
            </dl>
            </li>
            <li class="nav-list-item">
            <span>            
            <%= link_to end_user_path(current_end_user.id) do %>
            <p>ようこそ★<%= current_end_user.first_name %>さん</p>
            <% end %>
            </span>
            </li>
            <li class="nav-list-item">
            <span>
            <%= link_to "購入履歴" , orders_path %>
            </span>
            </li>
            <li class="nav-list-item">
            <span>
            <%= link_to "カート" , cart_products_path %>
            </span>
            </li>
            <li class="nav-list-item">
            <span>
            <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %>
            </span>
            </li>
        </ul>

        <% elsif admin_signed_in? %>
        <ul class="nav-list">
            <li class="nav-list-item">
            <span>
            <%= link_to "新規商品追加" , new_admin_product %>
            </span>
            </li>
            <li class="nav-list-item">
            <span>
            <%= link_to "販売商品一覧" , admin_products_path %>
            </span>
            </li>
            <li class="nav-list-item">
            <span>
            <%= link_to "入荷履歴" , admin_arrivals_path %>
            </span>
            </li>
            <li class="nav-list-item">
            <span>
            <%= link_to "ユーザ情報" , admin_end_users_path %>
            </span>
            </li>
            <li class="nav-list-item">
            <span>
            <%= link_to "注文一覧" , admin_order_path %>
            </span>
            </li>
            <li class="nav-list-item">
            <span>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </span>
            </li>
        </ul>
    
        <% else %>
        <ul class="nav-list">
        <%# 検索機能実装場所 %>
            <li class="nav-list-item">検索</li>

            <li class="nav-list-item">
            <span>
            <%= link_to "ユーザ名", new_end_user_session_path %>
            </span>
            </li>
            <li class="nav-list-item">
            <span>
            <%= link_to "購入履歴", new_end_user_session_path %>
            </span>
            </li>
            <li class="nav-list-item">
            <span>
            <%= link_to "カート", new_end_user_session_path %>
            </span>
            </li>
            <li class="nav-list-item">
            <span>
            <%= link_to "ログイン", new_end_user_session_path %>
            </span>
            </li>
        </ul>
        <% end %>
    </nav>
</header>

<%= content_for?(:content) ? yield(:content) : yield %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://kit.fontawesome.com/562ca3c57a.js" crossorigin="anonymous"></script>
</body>
</html>
